FROM node:20-alpine

WORKDIR /app

# Install dependencies for native modules and Chromium
RUN apk add --no-cache \
    libc6-compat \
    # Chromium dependencies
    chromium \
    nss \
    freetype \
    harfbuzz \
    ca-certificates \
    ttf-freefont \
    # Additional libraries for @sparticuz/chromium
    libstdc++

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Expose port
EXPOSE 3000

# Development command (will be overridden by docker-compose)
CMD ["npm", "run", "dev"]
